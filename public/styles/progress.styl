progress
  appearance: none
  height: 9px
  width: 70px
  border: 1px solid background-color
  // firefox
  background-color: transparent
  border-radius: 5px

  // ugly prefixes sadly required
  &::-webkit-progress-bar
    background-color: transparent

  &::-webkit-progress-value
    background-color: background-color
    border-radius: 3px

  &::-moz-progress-bar
    background-color: background-color
    border-radius: 3px

.notify-progress
  margin-left: 5px
